<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="VoyagerFont" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="VoyagerFont.Medium" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="VoyagerFont.SemiBold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="VoyagerFont.Bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="VoyagerFont.ExtraBold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleFont" parent="@style/VoyagerFont.Bold">
        <item name="android:textSize">60sp</item>
    </style>
    <style name="ButtonFont" parent="@style/VoyagerFont.SemiBold">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ButtonFont.Small" parent="@style/VoyagerFont.SemiBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextFont" parent="@style/VoyagerFont">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextFont.Medium" parent="@style/VoyagerFont.Medium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextFont.SemiBold" parent="@style/VoyagerFont.SemiBold">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextFont.Bold" parent="@style/VoyagerFont.Bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListTextFont" parent="@style/TextFont.Medium">
        <item name="android:textSize">13sp</item>
    </style>

</resources>
